{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://o19s.github.io/ubi/schema/query.response.schema.json",
  "title": "Query Response",
  "description": "The response to a query made by a user.",
  "type": "object",
  "required": [ "query_id" ],
  "properties": {  
    "query_id": {
      "description": "The unique identifier of a query, typically a UUID, but can be any string.",
      "oneOf": [
        {
          "type": "string",
          "format": "uuid",
          "examples": ["00112233-4455-6677-8899-aabbccddeeff"]
        },
        {
          "type": "string",
          "examples": ["1234-user-5678"]
        }
      ]
    },
    "query_response_objects_ids":{
      "description": "Objects returned by the query.  Maps to the `object_id` field in a event.",
      "type": "array",
      "items": {
        "anyOf": [
          {
            "type": "string"
          },
          {
            "type": "integer"
          }
        ]
      }
    }
  }
}
